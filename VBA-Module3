Sub SM_EN_Step1_Expert()
'
' Add EXP to EN Macro
'

'
    Dim EXPGain As Integer
    Dim BaseScore As Integer
    Dim LP As Integer
    
    EXPGain = Range("B10").Value
    LP = Range("B11").Value
    BaseScore = Range("B12").Value
    
    Range("B21").Select
    ActiveCell.FormulaR1C1 = "Expert"
    Range("C21").Select
    ActiveCell.FormulaR1C1 = EXPGain
    Range("B22").Select
    ActiveCell.FormulaR1C1 = "Expert"
    Range("C22").Select
    ActiveCell.FormulaR1C1 = BaseScore
    Range("E21").Select
    ActiveCell.FormulaR1C1 = LP
    
End Sub
