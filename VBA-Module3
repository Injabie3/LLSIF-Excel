Sub SM_EN_Add()
'
' Add EXP to EN Macro
'

    Dim BasePoints As Integer
    Dim ScoreRank As Double
    Dim PlaceRank As Double
    Dim RoundPoints As Integer
    Dim EXPGain As Integer
    
    Range("C22").Select
    BasePoints = ActiveCell.FormulaR1C1
    Range("C23").Select
    ScoreRank = ActiveCell.FormulaR1C1
    Range("C24").Select
    PlaceRank = ActiveCell.FormulaR1C1
    'the 0.00001 is to force VB to round up at .5
    RoundPoints = Round(BasePoints * ScoreRank * PlaceRank + 0.000001, 0)
    
    Range("C21").Select
    EXPGain = ActiveCell.FormulaR1C1
    
    Range("B28").Select
    ActiveCell.FormulaR1C1 = ActiveCell.FormulaR1C1 + RoundPoints
    Range("B5").Select
    ActiveCell.FormulaR1C1 = ActiveCell.FormulaR1C1 + EXPGain

End Sub
Sub SM_EN_Remove()
'
' Add EXP to EN Macro
'

    Dim BasePoints As Integer
    Dim ScoreRank As Double
    Dim PlaceRank As Double
    Dim RoundPoints As Integer
    Dim EXPGain As Integer
    
    Range("C22").Select
    BasePoints = ActiveCell.FormulaR1C1
    Range("C23").Select
    ScoreRank = ActiveCell.FormulaR1C1
    Range("C24").Select
    PlaceRank = ActiveCell.FormulaR1C1
    'the 0.00001 is to force VB to round up at .5
    RoundPoints = Round(BasePoints * ScoreRank * PlaceRank + 0.000001, 0)
    
    Range("C21").Select
    EXPGain = ActiveCell.FormulaR1C1
    
    Range("B28").Select
    ActiveCell.FormulaR1C1 = ActiveCell.FormulaR1C1 - RoundPoints
    Range("B5").Select
    ActiveCell.FormulaR1C1 = ActiveCell.FormulaR1C1 - EXPGain

End Sub
